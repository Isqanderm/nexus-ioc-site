{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["dom", "es6", "es2017"],
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@apps/*": ["src/apps/*"],
      "@styles/*": ["src/styles/*"],
      "@hooks/*": ["src/hooks/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["./src/css.d.ts", "./src/global.d.ts"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
