{
  "name": "nexus-ioc-site",
  "version": "1.0.0",
  "description": "Nexus IoC Website",
  "main": "dist/bootstrap.js",
  "scripts": {
    "build": "webpack --mode production",
    "dev:build": "cross-env NODE_ENV=development webpack --mode development --watch",
    "dev:server": "cross-env NODE_ENV=development nodemon --watch dist/server/bootstrap.js dist/server/bootstrap.js",
    "dev": "concurrently \"npm run dev:build\" \"npm run dev:server\"",
    "start": "cross-env NODE_ENV=production node dist/server/bootstrap.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check .",
    "prepare": "husky install"
  },
  "author": "Aleksandr Melnik",
  "license": "MIT",
  "dependencies": {
    "@fastify/static": "^8.0.2",
    "@nexus-ioc/core": "^0.4.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "cross-env": "^7.0.3",
    "fastify": "^5.1.0",
    "nexus-ioc-react-adapter": "^0.1.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.27.0",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@nexus-ioc/testing": "^0.4.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.19",
    "@types/webpack-dev-middleware": "^5.3.0",
    "@types/webpack-hot-middleware": "^2.25.9",
    "@types/webpack-node-externals": "^3.0.4",
    "concurrently": "^9.1.0",
    "css-loader": "^7.1.2",
    "husky": "^9.1.6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.10",
    "mini-css-extract-plugin": "^2.9.2",
    "nexus-ioc-graph-visualizer": "^0.1.6",
    "nodemon": "^3.1.7",
    "null-loader": "^4.0.1",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.3.3",
    "webpack-dev-middleware": "^7.4.2",
    "webpack-hot-middleware": "^2.26.1",
    "webpack-manifest-plugin": "^5.0.0",
    "webpack-node-externals": "^3.0.0"
  },
  "lint-staged": {
    "./src/*.{js,jsx,ts,tsx}": [
      "npx @biomejs/biome lint . --write"
    ]
  }
}
